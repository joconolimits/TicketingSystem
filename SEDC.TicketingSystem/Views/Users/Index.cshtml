@model IEnumerable<SEDC.TicketingSystem.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
                      <div class="container-fluid shadowDetail">
                          <h4 class="msgTextNoMrg"><b>All Users</b></h4>

                          <p>
                              @Html.ActionLink("Create New", "Create", null, new { @class = "btn loginbtnNoMrg" })
                          </p>
                          <table class="table">
                              <tr class="msgTextNoMrg">
                                  <th>
                                      @Html.DisplayNameFor(model => model.Name)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.LastName)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.Username)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.Email)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.Password)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.IsAdmin)
                                  </th>
                                  <th></th>
                              </tr>
                      </div>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <input type="password" value="@Html.DisplayFor(modelItem => item.Password)" />
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAdmin)
        </td>
    </tr>
}

</table>
